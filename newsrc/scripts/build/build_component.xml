<?xml version="1.0" ?>
<!-- $Id$ -->
<project name="AEC" basedir="." default="build">
	<target name="build" description="Build installable package">
		<mkdir dir="${dir.tmp}" />

		<copy todir="${dir.tmp}">
			<fileset dir="${dir.local}">
				<include name="administrator/**" />
				<include name="components/**" />
				<include name="media/**" />
				<include name="*.xml" />
				<include name="*.txt" />
			</fileset>
		</copy>

		<tar destfile="${dir.packages}/${file.package}_ver${file.version}_rev${svn.lastrevision}.${file.extension}" basedir="${dir.tmp}" compression="${file.compression}" />

		<delete dir="${dir.tmp}" includeemptydirs="true" />
	</target>
</project>