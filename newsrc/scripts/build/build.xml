<?xml version="1.0" ?>
<!-- $Id$ -->
<project name="AEC" basedir="." default="build">
	<target name="build" description="Build all installable packages" depends="config, git_lastrevision">
		<property file="properties/com.properties" override="true" />

		<property name="file.dist_package" value="AEC" />
		<property name="file.dist_version" value="${file.version}" />

		<phing phingfile="build_packages.xml" inheritRefs="true">
			<property file="properties/allpackages_compression_targz.properties" override="true" />
			<property file="properties/allpackages_packing.properties" override="true" />
		</phing>
		<phing phingfile="build_packages.xml" inheritRefs="true">
			<property file="properties/allpackages_compression_zip.properties" override="true" />
			<property file="properties/allpackages_packing.properties" override="true" />
		</phing>
	</target>

	<target name="git_lastrevision">
		<property name="git.lastrevision" value="5574" />
	</target>

	<target name="config" description="Load configuration file">
		<property file="properties/allpackages.properties"  override="true" />
	</target>

</project>